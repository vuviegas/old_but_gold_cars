<div>
  <%= simple_form_for(@car) do |f| %>
    <div class="form-inputs">
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :brand %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :model %>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :color %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :year %>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :description %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :price %>
        </div>
      </div>
          <%#= f.input :photo, as: :file %>
    </div>
    <div class="form-actions green-input text-right">
      <%= f.button :submit %>
    </div>
  <% end %>
  </br>
</div>
