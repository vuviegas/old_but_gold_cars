<div class="container mt-5">
  <h2>Criar conta</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" },
                      label: "Nome" %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" },
                      label: "Sobrenome"%>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "address" },
                      hint: "Informe logradouro, complemento, bairro, cidade e UF",
                      label: "Endereço" %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: "E-mail"%>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <div class="flex-fill mr-3">
          <%= f.input :password,
                      required: true,
                      hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: "Senha" %>
        </div>
        <div class="flex-fill ml-3">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: "Confirme sua senha" %>
        </div>
      </div>
    </div>
    <div class="form-actions green-input">
      <%= f.button :submit, "Cadastrar-se" %>
    </div>
  <% end %>
  </br>
</div>
