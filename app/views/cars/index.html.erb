<div class="container">
  <div class="p-2 d-flex row justify-content-around">
    <% @cars.each do |car| %>
      <div class="card-product">
        <%= cl_image_tag car.photos.first, height: 300, width: 400, crop: :fill %>
        <!-- <img src="https://source.unsplash.com/collection/1573177/800x600" /> -->
        <div class="card-product-infos">
          <h2><%= car.model %> | <%= car.year %></h2>
          <h3 class="card-car-pricing">R$ <%= car.price %></h3>
          <%= link_to car_path(car), :class => "btn btn-info btn-sm" do %>detalhes<% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
