<div class="container">
  <div class="d-flex row justify-content-start">
    <% @cars.each do |car| %>
      <div class="card-product mr-5 row">
        <img src="https://source.unsplash.com/collection/1573177/800x600" />
        <div class="card-product-infos">
          <h2><%= car.model %> | <%= car.year %></h2>
          <p><h2 class="card-car-pricing">R$ <%= car.price %></h2></p>
          <%= link_to car_path(car), :class => "btn btn-info btn-sm" do %>detalhes<% end %>
        </div>
        <div class="green-a justify-content-start">
          <div class="">
            <%= link_to "Edit", edit_car_path(car), :class => "fas fa-edit" %>
          </div>
          <div><%= link_to "Delete",
              car_path(car), :class => "fas fa-trash-alt",
              method: :delete,
              data: { confirm: "Are you sure?" } %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
