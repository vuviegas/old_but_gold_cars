<div class="container mt-5">
  <h1 class="anuncio">Entrar</h1>
  <br>

    <div class="modal-content">
     <div class="p-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: "E-mail" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label: "Senha" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: "btn btn-flat" %>
        </div>
      <% end %>
      <br>
      <div class="green-a">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
      </div>
      <br>
      <div class="text-center green-a">
        <p>Ainda nÃ£o tem cadastro? </p>
        <%= link_to "Cadastrar-se aqui", new_user_registration_path %>
      </div>
    </div>
    </div>
</div>